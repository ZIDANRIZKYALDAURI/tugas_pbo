#include <iostream>
using namespace std;

int main() {
    int n;
    cout << "Masukkan jumlah angka: ";
    cin >> n;
    
    int total = 0;
    for(int i = 0; i < n; i++) {
        int angka;
        cout << "Masukkan angka ke-" << (i+1) << ": ";
        cin >> angka;
        total += angka;
    }
    
    double rata_rata = (double)total / n;
    cout << "Rata-rata adalah: " << rata_rata << endl;
    
    return 0;
}
